FROM 	ubuntu:18.04

RUN	apt-get -y update \
&&	apt-get -y install perl openjdk-11-jre-headless gnuplot wget \
&&	cd /tmp \
&&	wget https://github.com/marbl/canu/releases/download/v2.1.1/canu-2.1.1.Linux-amd64.tar.xz \
&&	tar xf canu-2.1.1.Linux-amd64.tar.xz \
&&	cd canu-2.1.1 \
&&	cp -r bin/* /usr/local/bin/ \
&&	cp -r lib/*	/usr/local/lib/ \
&&	cp -r share/* /usr/local/share/ \
&&	cd / \
&&	apt-get -y autoremove wget \
&&	rm -rf /tmp/* \
&&	rm -rf /var/lib/apt/lists/*

LABEL	tool=canu version=2.1.1

WORKDIR	/data
